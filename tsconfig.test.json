{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "jsx": "react-jsx",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "esModuleInterop": true,
    "isolatedModules": true
  },
  "include": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "jest.setup.ts",
    "jest.config.ts",
    "jest.global-setup.ts"
  ],
  "exclude": ["node_modules"]
} 